<%= simple_form_for @user, :html => { :class => 'form-vertical' } do |f| %>
  <%= f.input :email %>
  <%= f.input :reset_password_token %>
  <%= f.input :avatar %>
  

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
<% end %>
