<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @job.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @job.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_at) %>:</strong></dt>
  <dd><%= @job.start_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish_at) %>:</strong></dt>
  <dd><%= @job.finish_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @job.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_jobs_path, :class => 'btn btn-default'  %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_job_path(@job), :class => 'btn btn-default' %>


<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_job_path(@job),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
